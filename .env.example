# Debian Docker Desktop Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# USER CONFIGURATION
# =============================================================================
# Username for the desktop user (default: user)
USERNAME=user

# User and Group IDs (should match your host user for volume permissions)
USER_UID=1000
USER_GID=1000

# =============================================================================
# DISPLAY CONFIGURATION
# =============================================================================
# Screen resolution (WIDTHxHEIGHTxDEPTH)
RESOLUTION=1920x1080x24

# VNC display number
DISPLAY=:1

# Timezone
TZ=UTC

# =============================================================================
# VNC CONFIGURATION
# =============================================================================
# VNC password (for KasmVNC)
VNC_PW=vncpassword

# View-only VNC password (optional, leave empty to disable)
VNC_VIEW_ONLY_PW=

# VNC ports
VNC_PORT=5901
VNC_WEB_PORT=6901

# =============================================================================
# SELKIES CONFIGURATION (for selkies variant only)
# =============================================================================
# Selkies web port
SELKIES_WEB_PORT=8080

# Video encoder: x264enc, vp8enc, vp9enc, nvh264enc (for NVIDIA GPUs)
SELKIES_ENCODER=x264enc

# Enable window resize
SELKIES_ENABLE_RESIZE=true

# Enable basic authentication
SELKIES_ENABLE_BASIC_AUTH=false
SELKIES_BASIC_AUTH_USER=
SELKIES_BASIC_AUTH_PASSWORD=

# TURN server configuration (for NAT traversal)
SELKIES_TURN_HOST=
SELKIES_TURN_PORT=
SELKIES_TURN_USERNAME=
SELKIES_TURN_PASSWORD=
SELKIES_TURN_PROTOCOL=udp

# Frame rate
FRAMERATE=30

# =============================================================================
# KASMVNC CONFIGURATION (for kasmvnc variant only)
# =============================================================================
# Enable audio streaming
KASM_SVC_AUDIO=1
KASM_SVC_AUDIO_INPUT=1

# Enable file transfer
KASM_SVC_UPLOADS=1
KASM_SVC_DOWNLOADS=1

# =============================================================================
# PLUGIN CONFIGURATION
# Set to 'true' to enable automatic installation of plugins on container start
# =============================================================================

# Google Chrome browser
ENABLE_CHROME=false

# NoMachine remote desktop server
ENABLE_NOMACHINE=false

# Cursor AI code editor
ENABLE_CURSOR=false

# Visual Studio Code
ENABLE_VSCODE=false

# Anthropic's Claude Code CLI
ENABLE_CLAUDE_CODE=false

# OpenCode CLI tool
ENABLE_OPENCODE=false

# =============================================================================
# HOMEBREW CONFIGURATION
# =============================================================================
HOMEBREW_NO_AUTO_UPDATE=1
HOMEBREW_NO_ANALYTICS=1

# =============================================================================
# CONTAINER CONFIGURATION
# =============================================================================
# Container name prefix
COMPOSE_PROJECT_NAME=debian-desktop

# Image tag to use
IMAGE_TAG=latest
